programa ej4
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    esqP,esqF:numero
  comenzar
    Pos(1,20)
    derecha
    esqP:=0
    esqF:=0
    repetir 99
      si ( (HayPapelEnLaEsquina)  & (~HayFlorEnLaEsquina) )
        esqP:=esqP+1
      si ( (HayFlorEnLaEsquina)  & (~HayPapelEnLaEsquina) )
        esqF:=esqF+1   
      mover
    si ( (HayPapelEnLaEsquina)  & (~HayFlorEnLaEsquina) )
      esqP:=esqP+1
    si ( (HayFlorEnLaEsquina)  & (~HayPapelEnLaEsquina) )
      esqF:=esqF+1  
    Informar(esqP)
    Informar(esqF)     
  fin
variables
  R_info: robot1
comenzar
  AsignarArea(R_info, ciudad)
  Iniciar(R_info, 1,1)
fin