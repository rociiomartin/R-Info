programa ej7
procesos
  proceso CalleFlor(E ca:numero;E num:numero)
  variables
    flores:numero
  comenzar
    Pos(1,ca)
    derecha
    mientras(flores<num)
      mientras(HayFlorEnLaEsquina)&(flores<num) 
        tomarFlor
        flores:=flores+1
      mover
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    ca,num:numero
  comenzar
    ca:=2
    num:=10
    CalleFlor(ca,num)   
  fin
variables
  R_info: robot1
comenzar
  AsignarArea(R_info, ciudad)
  Iniciar(R_info, 1,1)
fin