programa ej8
procesos
  proceso recorrerAvenida(E numAv: numero;E pasos:numero)
  comenzar
    si (pasos < 0)
      pasos:=0
    sino
      si (pasos > 99)
        pasos:=99
    Pos(numAv, 1)
    repetir pasos
      mover
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    numAv,pasos:numero
  comenzar
    numAv:=3
    pasos:=12
    recorrerAvenida(numAv,pasos)
  fin
variables
  R_info: robot1
comenzar
  AsignarArea(R_info, ciudad)
  Iniciar(R_info, 1,1)
fin